shownonascii: Xshownonascii
	sed -e s#/u/nsb/lib/fonts#`$(BASEDIR)/bin/andrewdirs andrewdir`/X11fonts# < Xshownonascii > shownonascii
	chmod +x shownonascii

mailto-hebrew: Xmailto-hebrew
	sed -e s#/u/nsb/lib/fonts#`$(BASEDIR)/bin/andrewdirs andrewdir`/X11fonts# < Xmailto-hebrew > mailto-hebrew
	chmod +x mailto-hebrew

FontRule()
DeclareFont(heb6x13)
DeclareFont(heb8x13B)
DeclareFont(heb8x13)

InstallCshScript(shownonascii, $(DESTDIR)/bin)
InstallCshScript(mailto-hebrew, $(DESTDIR)/bin)

clean::
	$(RM) shownonascii mailto-hebrew
