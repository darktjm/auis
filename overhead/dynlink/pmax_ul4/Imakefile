NormalObjectRule()
NormalAsmPPRule()

#ifdef RESOLVER_ENV
RESOLVER_LIB = $(RESOLVLIB)
LIBC_RESOLVER_LIST = gethostnamadr.o gethostent.o res_comp.o res_debug.o res_init.o res_mkquery.o res_send.o sethostent.o res_search.o
RESOLVER_SPLIT_CMD = /bin/sh -c 'if test -n ""$(RESOLVER_LIB); \
	then ar x $(RESOLVER_LIB); fi; exit 0';
LIBC_RESOLVER_HACK =-ar d libc.a $(LIBC_RESOLVER_LIST)
#endif



globalrefs._:	libc.eplist Makefile
		$(RM) ,globalrefs._ globalrefs._
		$(AWK) '{printf "%s\n", $$2}' libc.eplist >,globalrefs._
		echo errno>>,globalrefs._
		echo environ>>,globalrefs._
		echo _gp>>,globalrefs._
		$(MV) ,globalrefs._ globalrefs._

libc.eplist:	$(CLIB) $(CRT0PATH) $(RESOLVER_LIB) getlist.awk buglix.awk
		$(RM) /tmp/libhack.a
		$(AR) /tmp/libhack.a $(CRT0PATH)
		$(NM) -g $(RESOLVER_LIB) $(CLIB) ${GCCLIB} /tmp/libhack.a | \
			$(AWK) -f buglix.awk | \
			$(TR) ":" " " | $(AWK) -f getlist.awk >,libc.eplist
		$(MV) ,libc.eplist libc.eplist
		$(RM) /tmp/libhack.a

MkdirTarget($(DESTDIR)/lib/dynlink)
InstallLibrary(libc.a, $(DESTDIR)/lib/dynlink)
InstallCshScript(makedo.csh, $(DESTDIR)/bin/makedo)

#ifdef GNU_ENV
ARCHIVE_COM = ar x ${GCCLIB} ;
#endif /* GNU_ENV */

all::		libc.a

DelList._:	libc.eplist
		$(AWK) '{print $$1}' libc.eplist | $(SORT) -u > ,DelList._
		$(MV) ,DelList._ DelList._

libc.a:		$(CLIB) $(CRT0PATH) $(RESOLVER_LIB)  DelList._
		rm -rf new
		mkdir new
			cd new;\
		  	$(RESOLVER_SPLIT_CMD) \
			$(CP)  $(CRT0PATH) crt0.o ; \
			ar x $(CLIB) ; $(ARCHIVE_COM) \
			$(CHMODW) * ; \
			rm ___*_ ; \
			ar cq ,libc.a *
		$(MV) new/,libc.a libc.a
		-ar d libc.a `cat DelList._`
		$(LIBC_RESOLVER_HACK)
		$(RANLIB) libc.a
		rm -rf new

InstallFile(globalrefs._,$(INSTINCFLAGS),$(DESTDIR)/etc)
InstallFile(mips_gsize.awk,$(INSTINCFLAGS),$(DESTDIR)/etc)
InstallFile(mips_global_space.c,$(INSTINCFLAGS),$(DESTDIR)/etc)
InstallFile(mips_gsize.sh,$(INSTINCFLAGS),$(DESTDIR)/etc)

clean::
		$(RM) DelList._ ,DelList._ ,libc.eplist libc.eplist globalrefs._ ,globalrefs._ ,* libc.a
LOCALINCLUDES=-I../common

CPPProgramTarget(adynlink, ATKOLinkI.o dofix.o, ../common/libATKOLink.a ../common/libATKLink.a $(UTILLIB), )

CPPProgramTarget(aexelink,  ATKELinkI.o,  ../common/libATKELink.a ../common/libATKLink.a $(UTILLIB), )

InstallProgram(adynlink, $(DESTDIR)/etc)
InstallProgram(aexelink, $(DESTDIR)/etc)
InstallCshScript(exp.csh,$(DESTDIR)/etc/alibexp)
LibraryTarget(libATKDynLoad.a, doload.o)
InstallLibrary(libATKDynLoad.a, $(DESTDIR)/lib)
