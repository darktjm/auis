#ifdef CPPCONVERTER_ENV

#define IHaveSubdirs
SUBDIRS=chfiles

NormalHelpRule()
DependTarget()
MkdirTarget($(DESTDIR)/lib/c++conv)

InstallFiles(c2c++.n h2c++h.n safemacrotypes classinfo, $(INSTINCFLAGS), ${DESTDIR}/lib/c++conv)
InstallDocs(C++Conv.help C++Index.help C++Proto.help atk-C++.help, ${DESTDIR}/help)
InstallCshScript(classindex, $(DESTDIR)/bin)
InstallCshScript(C++Conv, $(DESTDIR)/bin)
InstallCshScript(C++Index, $(DESTDIR)/bin)
InstallCshScript(C++Proto, $(DESTDIR)/bin)

#endif

atkaliases: classinfo Imakefile
	$(RM) ,atkaliases
	awk -f aliases.awk classinfo>,atkaliases
	echo datacatapp datacata>>,atkaliases
	mv ,atkaliases atkaliases

CleanTarget(atkaliases)

InstallFile(atkaliases, $(INSTINCFLAGS), ${DESTDIR}/lib)
