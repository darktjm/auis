\chapter{Procedure Table Listing for widgets}


\bold{AWidgetView-invert-debug}(object \italic{self})

\leftindent{Toggle the AWidgetView debug flag

Bound to:  \typewriter{Esc-^DW}}


action \bold{atext-activate}(object \italic{self})

\leftindent{Invokes the widget's activate callback.  There is no return 
value.}

action \bold{atext-hit}(object \italic{self}, object \italic{AOption}, 
object \italic{AOptionv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Passes a mouse hit to the text.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}


action \bold{abutton-activate}(object \italic{self}, object \italic{Abutton}, 
object \italic{Abuttonv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Disarms the button, then executes the activate callback.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}

action \bold{abutton-arm}(object \italic{self}, object \italic{Abutton}, 
object \italic{Abuttonv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Arms or disarms the button, according to the mouse position.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}

action \bold{abutton-disarm}(object \italic{self}, object \italic{Abutton}, 
object \italic{Abuttonv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Disarms the button.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}

action \bold{abutton-radiotoggle}(object \italic{self}, object \italic{Abutton}, 
object \italic{Abuttonv})

\leftindent{Toggles the 'set' state of the button, ensures 
only one of the radio group buttons is 'set' at any one time.  All arguments are 
unnamed (positional).  There is no return value.  \italic{FIXME: document more.}}

action \bold{abutton-toggle}(object \italic{self}, object \italic{Abutton}, 
object \italic{Abuttonv})

\leftindent{Toggles the 'set' state of the button.  All arguments are 
unnamed (positional).  There is no return value.  \italic{FIXME: document more.}}


action \bold{alist-text-hit}(object \italic{self}, object \italic{AList}, 
object \italic{AListv}, integer \italic{action}, integer \italic{pos}, 
integer \italic{number_clicks})

\leftindent{Called for every mouse hit.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
non-0 to propagate the hit event.  \italic{FIXME: document more.}}


action \bold{aoption-button-hit}(object \italic{self}, object \italic{AOption}, 
object \italic{AOptionv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Pops up the option list.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}

action \bold{aoption-card-hit}(object \italic{self}, object \italic{AOption}, 
object \italic{AOptionv}, integer \italic{x}, integer \italic{y}, 
integer \italic{within}, integer \italic{action}, integer 
\italic{num_clicks})

\leftindent{Pops up the option list.  All arguments are 
unnamed (positional).  The return value is optional; if present, it is 
the view which processed the hit.  \italic{FIXME: document more.}}


