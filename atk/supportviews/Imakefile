	label.H \
	labelview.H \
	lpair.H \
	lprruler.H \
	lprrulerview.H \
	matte.H \
	oscroll.H \
	palette.H \
	panner.H \
	sbttnav.H \
	sbutton.H \
	sbuttonv.H \
	scroll.H \
	scpanner.H \
	stringtbl.H \
	strtblview.H \
	scrolling.H \
        amenu.H \
	popupwin.H

LIBS = $(BASEDIR)/lib/libutil.a

NormalObjectRule()
NormalATKRule()

InstallClassFiles($(HFILES))

/* ATKLibraryTarget(supviews, $(OBJS), $(LIBS),) */
ATKLibrary(supviews, $(OBJS), $(LIBS),,)
InstallATKLibrary(supviews, ${DESTDIR}/lib/atk)

DependTarget()

NormalHelpRule()
InstallDocs(mttproc.help,${DESTDIR}/help)
InstallHelpAlias(mttproc,matteproc matteprocs)
InstallDocs(scroll.help,${DESTDIR}/help)
InstallDocs(oscroll.help,${DESTDIR}/help)
InstallDocs(panner.help,${DESTDIR}/help)
InstallDocs(sbutton.help,${DESTDIR}/help)
InstallHelpAlias(scroll, scrollbar scrolling scrollbar-tutorial)
InstallDocs(bpair.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(label.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(labelv.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(lpair.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(lprruler.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(lprrulv.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(matte.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(palette.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(oscroll.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(scroll.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(strtbl.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(strtblv.doc,${DESTDIR}/doc/PROGRAMMER)
InstallDocs(dialog.pr oscroll.pr scroll.pr sbutton.pr matte.pr, $(DESTDIR)/lib/prs)
