DATACAT=datacat
CHAPROOT=chapter
CHAPLIST=chapterlist.ez
OUTFILE=rootfile.ez
CLEANPROG=delete
CLEANFLAGS=
HEADER=headers.ez


default: clean thesis

thesis:
	echo "Making thesis..."; \
	for chapter in ${CHAPROOT}*.ez ; \
		do echo "Including chapter file $$chapter " ; \
		cat "@include($$chapter)\n" >> ${CHAPLIST} ;\
	done; \
	datacat ${HEADER} ${CHAPLIST} > ${OUTFILE}; \
	echo "Making thesis...Done."; \
	exit 0

printout:
	echo "Making printout..."; \
	ezprint ${OUTFILE} ; \
	echo "Making printout...Done."; \
	exit 0

clean:	
	${CLEANPROG} ${CLEANFLAGS} ${OUTFILE} ${CHAPLIST}; \


