DependTarget()

OSOBJS = flock.o strncpy.o  getwd.o sigvector.o

NormalObjectRule()
MkdirTarget($(DESTDIR) $(DESTDIR)/lib $(DESTDIR)/lib/atkhp $(DESTDIR)/lib/atkhp/dyn )
LibraryTarget(libossup.a, $(OSOBJS) $(AFSOBJS))
install.time:: libossup.a
	cp libossup.a $(DESTDIR)/lib/libossup.a

install.time:: libClist libC.a
	$(RM) $(DESTDIR)/lib/atkhp/libClist
	cp libClist $(DESTDIR)/lib/atkhp/libClist
	$(RM) $(DESTDIR)/lib/atkhp/libC.a
	cp libC.a $(DESTDIR)/lib/atkhp/libC.a

libClist: /usr/lib/libC.a
	nm -rp /usr/lib/libC.a|awk -f list.awk>,libClist||rm ,libClist
	mv ,libClist libClist

libC.a:
	as -o foo.o /dev/null
	ar clq libC.a  foo.o

CleanTarget()
clean:: 
	$(RM) ,libClist libClist foo.o libC.a
